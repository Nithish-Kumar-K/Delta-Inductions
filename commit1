			<div id="seconds"></div>
			
		 	<script>
		
				
				var deadline=new Date("2016-05-28");
				
				//document.getElementById("properdd").innerHTML = deadline.getTime();

				
				//var timeleft=new Date();
				//document.getElementById("properdate").innerHTML = timeleft.getTime();
				
				function timer(){
				    u = new Date();
				    var t = new Date;
				    t = deadline.getTime()-u.getTime();
					var timeleft = t; 
					document.getElementById("days").innerHTML = 
					Math.floor(timeleft/86400000)+" days";
					timeleft%=86400000; 
					document.getElementById("hours").innerHTML = 
					Math.floor(timeleft/3600000)+" hours";
					timeleft%=3600000;
					document.getElementById("minutes").innerHTML = 
					Math.floor(timeleft/60000)+" minutes";
					timeleft%=60000;
					document.getElementById("seconds").innerHTML = 
					Math.floor(timeleft/1000)+" seconds";
				};
				setInterval(function(){timer()},1000);
			</script>
